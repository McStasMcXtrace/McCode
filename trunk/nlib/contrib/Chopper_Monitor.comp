		S_mon[i][k]=N_tot/(double)bin_tau/(double)bin_nD2;
		sum+=S_mon[i][k];
		S_sum+=S_monp[i][k];
		}
		//printf("S_monp[%i][%i] : %e\t",i,0,S_monp[i][0]);
	}
	

	/*Normalization of S_monp compared to Z*/
	coeff_ZS=(S_sum/Z_sum)*f;
