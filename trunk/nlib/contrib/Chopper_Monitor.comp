			for (j=0;j<f*Nseq;j++){
				S_monpp[i][k]+=(VarsC.ChopSeq[j % Nseq]-c)*(VarsC.ChopSeq[j % Nseq]-c)*Vars.Mon2D_p[(j*(bin_nD-1)/(f*Nseq-1)+(i*(bin_nD-1))/(bin_tau-1)) % bin_nD][k]*Vars.Mon2D_p[(j*(bin_nD-1)/(f*Nseq-1)+(i*(bin_nD-1))/(bin_tau-1)) % bin_nD][k];
