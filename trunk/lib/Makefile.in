SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
srcdir = @srcdir@
topdir = ..
libdir = @libdir@
mandir = @mandir@
PWD = `pwd`

INSTALL=@INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

libdir_mcstas = $(libdir)/mcstas
libdir_mcxtrace = $(libdir)/mcxtrace

install: install_@PACKAGE_TARNAME@

install_mcstas: installdirs
	if [ -d $(libdir_mcstas) ]; then \
	  echo "Moving your old library dir $(libdir_mcstas) to $(libdir_mcstas).`date +%Y%m%d_%H.%M`"; \
	  mv -f $(libdir_mcstas) $(libdir_mcstas).`date +%Y%m%d_%H.%M`;\
        fi;
	$(topdir)/mkinstalldirs $(libdir_mcstas)

	cd $(topdir) && for file in `cd lib; ls | grep -v .svn| grep -v Make`; do \
	  if [ -d lib/$$file ]; then \
	    ./mkinstalldirs $(libdir_mcstas)/$$file; \
	    for comp in `cd lib/$$file; ls | grep -v .svn`; do \
        if [ -f $(libdir_mcstas)/$$file/$$comp ]; then \
          echo "Renaming old library element version $(libdir_mcstas)/$$file/$$comp to $(libdir_mcstas)/$$file/$$comp.old"; \
          mv -f $(libdir_mcstas)/$$file/$$comp $(libdir_mcstas)/$$file/$$comp.old; \
        fi; \
	      if [ -d lib/$$file/$$comp ]; then \
          ./mkinstalldirs $(libdir_mcstas)/$$file/$$comp; \
          for tool in `cd lib/$$file/$$comp; ls | grep -v .svn`; do \
	      if [ -d lib/$$file/$$comp/$$tool ]; then \
          ./mkinstalldirs $(libdir_mcstas)/$$file/$$comp/$$tool ; \
	        for subtool in `cd lib/$$file/$$comp/$$tool; ls | grep -v .svn`; do \
		  if [ -d lib/$$file/$$comp/$$tool/$$subtool ]; then \
		     ./mkinstalldirs $(libdir_mcstas)/$$file/$$comp/$$tool/$$subtool ; \
	             for subsubtool in `cd lib/$$file/$$comp/$$tool/$$subtool; ls | grep -v .svn`; do \
                       $(INSTALL_DATA) lib/$$file/$$comp/$$tool/$$subtool/$$subsubtool $(libdir_mcstas)/$$file/$$comp/$$tool/$$subtool/$$subsubtool; \
                     done \
		  else \
                    $(INSTALL_DATA) lib/$$file/$$comp/$$tool/$$subtool $(libdir_mcstas)/$$file/$$comp/$$tool/$$subtool; \
		  fi; \
                done \
              else \
                $(INSTALL_DATA) lib/$$file/$$comp/$$tool $(libdir_mcstas)/$$file/$$comp/$$tool; \
	      fi; \
          done \
        else \
	        $(INSTALL_DATA) lib/$$file/$$comp $(libdir_mcstas)/$$file/$$comp; \
        fi; \
	    done \
	  else \
	    $(INSTALL_DATA) lib/$$file $(libdir_mcstas)/$$file; \
	  fi \
	done

