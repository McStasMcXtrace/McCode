DEFINE COMPONENT Beamstop_circular
DEFINITION PARAMETERS ()
SETTING PARAMETERS (radius=0.1)
STATE PARAMETERS (x,y,z,vx,vy,vz,t,s1,s2,p)

INITIALIZE
%{
  fprintf(stderr,"Beamstop_circular: this component is OBSOLETE (not maintained)\n");
  fprintf(stderr,"Beamstop_circular: rather use optics/Beamstop\n");
%}

TRACE
%{
    PROP_Z0;
    if(x*x + y*y <= radius*radius)
      ABSORB;
%}

MCDISPLAY
%{
  magnify("xy");
  circle("xy", 0, 0, 0, radius);
%}

END
