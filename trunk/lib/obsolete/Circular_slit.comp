DEFINE COMPONENT Circular_slit
DEFINITION PARAMETERS ()
SETTING PARAMETERS (radius)
STATE PARAMETERS (x,y,z,vx,vy,vz,t,s1,s2,p)
TRACE
%{
  PROP_Z0;
  if(x*x + y*y > radius*radius)
    ABSORB;
%}

MCDISPLAY
%{
  magnify("xy");
  circle("xy", 0, 0, 0, radius);
%}

END
