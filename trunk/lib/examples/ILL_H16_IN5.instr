AT (0,0,0) RELATIVE centro_det
ROTATED (0,0,0) RELATIVE centro_det
EXTEND
%{
   flag_hous=SCATTERED;
   if(SCATTERED) 
   {
    index_hous = (int) floor((atan2(x,z)*RAD2DEG+73.36765)*ntubes/2/73.36765);
   } else index_hous = -100;
%}

//------------ PSD Detector ---------------------------------------------

COMPONENT Det_PSD = PSD_Detector(
    yheight = 3.0, radius = 4.0, zdepth = det_depth, awidth=(ang_fin-ang_ini)*PI/180*4.0,
    nx = ntubes, ny = 128, //type = "events",
    PressureConv = 4.75, PressureStop = 1.25, threshold=100, 
    borderx=-1, bordery=-1, LensOn = 1, filename = "in5det.dat",
    FN_Conv="Gas_tables/He3inHe.table", FN_Stop="Gas_tables/He3inCF4.table")
AT (0,0,0) RELATIVE centro_det
ROTATED (0,0,0) RELATIVE centro_det
EXTEND
%{
   flag_det=SCATTERED;
   if(SCATTERED) 
   {
    index_det = (int) floor((atan2(x,z)*RAD2DEG+73.36765)*ntubes/2/73.36765);
    if (flag_hous && index_hous != index_det) 
    { 
     ABSORB;
    }    
   }
%}

COMPONENT in5_t = Monitor_nD(
  options="banana, auto t bins=50, parallel, previous")
WHEN    (flag_det==1)
AT      (0,0,0) RELATIVE centro_det
ROTATED (0,0,0) RELATIVE centro_det

END


