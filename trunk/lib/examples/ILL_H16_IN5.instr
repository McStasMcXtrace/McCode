AT (0,0,0) RELATIVE centro_det
EXTEND
%{
   flag_direc=SCATTERED;
%}

//------------ Fe HOUSING------------------------------------------------

COMPONENT hous = PowderN(
  reflections=housing, radius = 4.0-0.00001, thickness = 0.0005,
  yheight = 3.0,p_transmit=0.8)
