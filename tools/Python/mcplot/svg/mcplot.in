#!/usr/bin/env bash
# Wrapper script for @P@plot-svg-py

# First ensure that we follow symlink if needed
LINK=`readlink $0`

# Am I a symlink?
if [ "x$LINK" != "x" ]; then
    LIB=`dirname $LINK`
else
    LIB=`dirname $0`
fi
UNAME=`uname -s`
ARCH=`arch`

if [ -d "$LIB/../miniconda3" ]; then
    PATH=$LIB/../miniconda3/bin:$PATH
fi

LIB="$LIB/../tools/Python/@P@plot/svg"
TOOL="@P@plot"
VERS="@MCCODE_VERSION@"


canrun() {
    if ! [ -x ${LIB}/${TOOL}.py ]; then
        exit 127;
    fi

#    modules="svg"
#    cmd=""
#    for name in ${modules}; do
#        cmd="${cmd}import ${name}; "
#    done
#    python3 -c "${cmd}"
}

if ( canrun ); then
    python3 ${LIB}/${TOOL}.py $*
else
    @FLAVOR@_errmsg Failed to run Python ${TOOL} - permissions or missing dependencies\?
fi
