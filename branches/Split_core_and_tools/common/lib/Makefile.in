SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
srcdir = @srcdir@
topdir = ..
rootdir = ../../
libdir = @libdir@
mandir = @mandir@
PWD = `pwd`

INSTALL=@INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

libdir_mccode = $(libdir)/@MCCODE_TARNAME@

install: install_@MCCODE_TARNAME@

install_@MCCODE_TARNAME@: installdirs
	$(rootdir)/mkinstalldirs $(libdir_mccode)
	cp -rp * $(libdir_mccode)/

installdirs:
	$(rootdir)/mkinstalldirs $(bindir) $(libdir) $(libdir_@MCCODE_TARNAME@) $(mandir)/man1

