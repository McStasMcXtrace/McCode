#====================#
# Make Main Branches #
#====================#
dn: ou=person,dc=<MACHINE DOMAIN>
objectclass: organizationalunit
ou: person
description: Branch containing inetorgperson entries

dn: ou=groups,dc=<MACHINE DOMAIN>
objectclass: organizationalunit
ou: groups
description: organisationalunit Groups {Student|courseStaff|itStaff}

dn: ou=access,dc=<MACHINE DOMAIN>
objectclass: organizationalunit
ou: access
description: Single User Moodle Bind Branch

#===============#
# Add DummyUser #
#===============#
dn: cn=DummyUser,ou=person,dc=<MACHINE DOMAIN>
objectclass: inetOrgPerson
cn: DummyUser
sn: Placeholder
uid: DU
userpassword: <OPTIONAL>
mail: <YOUR EMAIL>
description: DummyUser:
 - Fake user with zero privs. 
 - Made to initiate group branches.
 - Member of all groups.
ou: person

#======================#
# Add moodle Bind User #
#======================#
dn: cn=moodle,ou=access,dc=<MACHINE DOMAIN>
objectclass: inetOrgPerson
cn: moodle
sn: bind user
uid: MoodleBindUser
userpassword: <OPTIONAL>
mail: <YOUR EMAIL>
ou: access

#==========================#
# Making ou=groups Subtree #
#==========================#
dn: cn=Student,ou=groups,dc=<MACHINE DOMAIN>
objectclass: groupofnames
cn: Student
description: Students
member: cn=DummyUser,ou=person,dc=<MACHINE DOMAIN>

dn: cn=itStaff,ou=groups,dc=<MACHINE DOMAIN>
objectclass: groupofnames
cn: itStaff
description: IT Staff Group
member: cn=DummyUser,ou=person,dc=<MACHINE DOMAIN>

dn: cn=courseStaff,ou=groups,dc=<MACHINE DOMAIN>
objectclass: groupofnames
cn: courseStaff
description: Teaching Staff Group
member: cn=DummyUser,ou=person,dc=<MACHINE DOMAIN>