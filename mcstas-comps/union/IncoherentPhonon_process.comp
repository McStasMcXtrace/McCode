double angularIntegral_p_phonon(int p, double alpha, double x)
{
  int l;
  double pol, term, ang;
  double ym = alpha*pow(1.0-x,2);
  double yp = alpha*pow(1.0+x,2);
  pol = 1;
  term = 1; 
  for(l=1;l<=p;l++) {
    term *= ym/l;
    pol += term;
  }
  ang = exp(-ym)*pol;
  //
  pol = 1;
  term = 1; 
  for(l=1;l<=p;l++) {
    term *= yp/l;
    pol += term;
  }
  ang -= exp(-yp)*pol;

  return ang;
};

