DEFINE INSTRUMENT Unittest_SPLIT_sample(int SAMPLE=1, int SPLITS=10)

DECLARE
%{
  double Pp0;
%}

INITIALIZE
%{
  Pp0=1.0/mcget_ncount();
%}

TRACE

COMPONENT Arm = Arm()
  AT (0,0,0) ABSOLUTE
EXTEND %{
  // position x in one of 100 bins
  x = randpm1()*0.0005;
  y = randpm1()*0.0005;
  if ( mcipSAMPLE == 3) {
    vz=200+rand01()*4400;
  } else
    vz= 2200;
  p = 1; 
%}

SPLIT SPLITS COMPONENT Slit = Arm()
  AT (0,0,0) ABSOLUTE
 

COMPONENT Incoh = Incoherent(radius=0.01,focus_r=1, target_z=1)
  WHEN (SAMPLE==1) AT (0,0,0.1) RELATIVE Slit
EXTEND %{
  if(!SCATTERED) ABSORB;
  p = Pp0;
%}

COMPONENT Powder = PowderN(radius=0.01,reflections="Al.lau",p_inc=0.01,p_transmit=0.1)
  WHEN (SAMPLE==2) AT (0,0,0.1) RELATIVE Slit
EXTEND %{
  if(!SCATTERED) ABSORB;
  p = Pp0;
%}

COMPONENT SX = Single_crystal(radius=0.01,reflections="Al.lau",mosaic=20)
  WHEN (SAMPLE==3) AT (0,0,0.1) RELATIVE Slit
EXTEND %{
  if(!SCATTERED) ABSORB;
  p = Pp0;
%}


COMPONENT PSD = PSD_monitor_4PI(radius=1, filename="splits", nx=100, ny=100)
 AT (0,0,0) RELATIVE Incoh
  
FINALLY
%{
%}

END
