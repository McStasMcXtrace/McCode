    Fq_triaxial_ellipsoid(q, &F1, &F2, sld, sld_solvent, trace_radius_equat_minor, trace_radius_equat_major, trace_radius_polar);
    Iq_out = F2;


    float vol;
    vol = 1;

    // Scale by 1.0E2 [SasView: 1/cm  ->   McXtrace: 1/m]
    Iq_out = model_scale*Iq_out / vol * 1.0E2;

    
    p *= l_full*solid_angle/(4*PI)*Iq_out*exp(-my_a_k*(l+l1));


    SCATTER;
  }
%}

