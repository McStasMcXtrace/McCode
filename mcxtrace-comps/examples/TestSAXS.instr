COMPONENT Monitor = PSD_monitor(
	filename = "PSDMonitor",
	xwidth = 2.0 * RadiusOfDetector / sqrt(2.0), 
	//xwidth = 2.0 * RadiusOfDetector, 
	yheight = 2.0 * RadiusOfDetector / sqrt(2.0),
	//yheight = 2.0 * RadiusOfDetector,
	nx = 200,
	ny = 200,
	restore_xray = 1
